{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Django dev server",
            "type": "python",
            "request": "launch",
            "pythonArgs": ["-Wa"],
            "program": "${workspaceFolder}\\manage.py",
            "args": [
                "runserver"
            ],
            "django": true
        },
        {
            "name": "Django tests",
            "type": "python",
            "request": "launch",
            "pythonArgs": ["-Wa"],
            "program": "${workspaceFolder}\\manage.py",
            "args": [
                "test"
            ],
            "django": true
        }
    ]
}